{
  "extends": [
    "development"
  ],
  "hints": {
    "no-inline-styles": "off",
    "axe/forms": [
      "default",
      {
        "select-name": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "-moz-backface-visibility",
          "-webkit-text-size-adjust",
          "background-clip",
          "-webkit-filter",
          "@-ms-viewport",
          "-moz-user-select",
          "-moz-animation-timing-function",
          "backface-visibility"
        ]
      }
    ],
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "meta[name=theme-color]"
        ]
      }
    ],
    "manifest-exists": "off"
  }
}